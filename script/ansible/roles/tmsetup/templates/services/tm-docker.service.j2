# /etc/systemd/system/tm-docker.service
# to run: sudo systemctl stop|start|restart|enable|disable tm-docker

[Unit]
Description=tm-docker
Requires=docker.service
After=docker.service go2rtc_server.service

[Service]
Type=notify
Restart=always
User=root
Group={{ tmsetup_codegroup }}
TimeoutStopSec=30
WorkingDirectory={{ tmsetup_codedir }}/docker

ExecStartPre=/usr/bin/docker compose -f compose.yaml build
ExecStart=/usr/bin/docker compose -f compose.yaml up --force-recreate
ExecStopPost=/usr/bin/docker compose -f compose.yaml down --remove-orphans

[Install]
WantedBy=multi-user.target
