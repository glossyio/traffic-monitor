{
    "name": "traffic-monitor",
    "description": "Traffic Monitor built with edge ML for object detection and radar for speed monitoring. Learn more at www.trafficmonitor.ai",
    "dependencies": {
        "node-red": "*",
        "node-red-contrib-aedes": "~0.15.0",
        "node-red-contrib-image-output": "~0.6.4",
        "node-red-dashboard": "~3.6.5",
        "node-red-node-serialport": "~2.0.2",
        "node-red-node-sqlite": "~1.1.1",
        "node-red-node-base64": "~1.0.0",
        "node-red-contrib-os": "~0.2.1",
        "@flowfuse/node-red-dashboard": "~1.30.1"
    },
    "node-red": {
        "settings": {
            "flowFile": "/data/flows.json",
            "credentialsFile": "/data/flows_cred.json"
        }
    },
    "scripts": {
        "start": "node $NODE_OPTIONS node_modules/node-red/red.js $FLOWS",
        "debug": "node --inspect=0.0.0.0:9229 $NODE_OPTIONS node_modules/node-red/red.js $FLOWS",
        "debug_brk": "node --inspect=0.0.0.0:9229 --inspect-brk $NODE_OPTIONS node_modules/node-red/red.js $FLOWS"
    }
}